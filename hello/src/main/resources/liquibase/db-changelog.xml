	<changeSet id="19" author="Cristi">

		<sql endDelimiter='' splitStatements="false">
			Create function differenceTourDurationByRouteAndHour(idRoute int, forHour int)
			returns int

			begin

			DECLARE durationRef int;
			DECLARE averageForRouteByHour int;
			DECLARE difference int;
			SELECT duration INTO durationRef from routes where id = idRoute;

			SELECT getAverageTourForRouteByHour(forHour,idRoute) into
			averageForRouteByHour;

			select averageForRouteByHour-durationRef INTO difference;

			return difference;
			END
		</sql>

	</changeSet>
	
