	<changeSet id="14" author="Cristi">

		<sql endDelimiter='' splitStatements="false">
			CREATE TRIGGER
			tour_update
			before INSERT
			ON internship.records
			FOR EACH ROW
			begin
			SET NEW.tour =
			TIMEDIFF(NEW.pauseTime,NEW.startTime);
			SET
			NEW.retour =
			TIMEDIFF(NEW.stopTime,NEW.pauseTime);
			end
		</sql>
	</changeSet>

