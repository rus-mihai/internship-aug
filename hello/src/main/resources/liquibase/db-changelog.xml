	<changeSet id="16" author="Cristi">
		<sql endDelimiter='' splitStatements="false">
			CREATE function
			getAverageTourForRouteByHour (forHour INT, route INT)
			RETURNS INT

			BEGIN
			DECLARE result INT;
			SELECT sum(tour) div count(*) INTO result
			FROM internship.records where
			hour(startTime) = forHour and idRoute =
			route;

			RETURN result;
			END
		</sql>
	</changeSet>

	<changeSet id="17" author="Cristi">
		<sql endDelimiter='' splitStatements="false">
			create function
			getAverageTourByDayHourForRoute(forDay int, forHour int,idRoute int)
			RETURNS INT

			BEGIN
			DECLARE result INT;
			SELECT sum(tour) div count(*) INTO result FROM internship.records WHERE
			dayofweek(startTime) = forDay and hour(startTime) = forHour and
			idRoute = idRoute;

			RETURN result;
			END
		</sql>
	</changeSet>

	<changeSet id="18" author="Cristi">
